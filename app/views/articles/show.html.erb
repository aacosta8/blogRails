<h1><%= @article.title%></h1>

<% unless @article.user.nil? %>
<p>
	Escrito por: <%= @article.user.email%>
</p>
<%end%>

<div class="form-group">
	<%= image_tag @article.cover.url()%>
</div>

<p>
	Visitas: <%= @article.visits_count%>
</p>

<p>
	Categorias:
	<% @article.categories.each do |category|%>
			<%= link_to category.name, category, style:"color:#{category.color}"%>
	<%end%>
</p>

<div>
	<%= @article.body%> - <%= link_to "x" , @article , method: :delete %>
</div>
<br>
<div>
	<%= link_to  "Editar", edit_article_path(@article)%>
</div>

<div class="form-group">
	<h3>Comentarios</h3>
	<%= render "comments/form"%>
		<!-- <div class="container" id="comment-box"> -->
		<ul id="comments-box">


		<%@article.comments.each do |comment|%>
		<li>
			<%=comment.body%> - <%=comment.user.email%>
		</li>
		<!-- <div class="panel-group">
	    <div class="panel panel-default">
				<div class="panel-heading">Creado por: <%=comment.user.email%></div>
				<div class="panel-body"><%=comment.body%></div>
			</div>
		</div> -->
		<%end%>
		</ul>
	<!-- </div> -->
</div>
