<article class="bottom-space">

  <%= article_cover @article.cover.url%>

  <div class="row center-xs">
    <div class="col-xs-12 light-border col-md-12">
      <h1 class="be-big orange"><%= @article.title%></h1>
      <p class="text-right be-small">
        <%=link_to "AtrÃ¡s", articles_path, class:"underline"%>
         - <span class="orange"> <%=@article.visits_count%>Visita(s) </span>
         - <% unless @article.user.nil? %>
        	Escrito por: <%= @article.user.email%>
        <%end%>

      </p>

      <div class="text-justify">
        <%= Sanitize.fragment(@article.body , Sanitize::Config::RELAXED).html_safe%>
        <p>

          Categorias:
        	<% @article.categories.each do |category|%>
        			<%= link_to category.name, category, style:"color:#{category.color}"%>
        	<%end%>
        </p>
      </div>

      <div class="top-space">
        <%= render "articles/comments"%>
      </div>

    </div>
  </div>
</article>
