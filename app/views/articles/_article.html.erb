<div class="col-md-4">
  <div class="panel-group relative article-height">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3><%= link_to article.title , article%></h3>
        <p>
            <%= truncate(article.body, length:30)%>
        </p>
      </div>
      <div class="panel-body background-cover"
      style="background:url(<%=article.cover.url(:thumb)%>);width:100%;height:100px">
      </div>
    </div>
  </div>
</div>
